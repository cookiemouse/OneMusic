<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:padding="@dimen/dp_5">


    <ImageView
        android:id="@+id/iv_adapter_filemanager_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"/>

    <ImageView
        android:id="@+id/iv_adapter_musiclist_playing"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_adapter_filemanager_playing"
        android:layout_toRightOf="@+id/iv_adapter_filemanager_playing"
        android:padding="@dimen/dp_3"
        app:srcCompat="@drawable/unknown_64"/>

    <TextView
        android:id="@+id/tv_adapter_musiclist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_adapter_musiclist_playing"
        android:layout_toRightOf="@+id/iv_adapter_musiclist_playing"
        android:lines="1"
        android:text="@string/app_default"
        android:textColor="@color/color_Black"/>

    <TextView
        android:id="@+id/tv_adapter_musiclist_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv_adapter_musiclist_playing"
        android:layout_toRightOf="@+id/iv_adapter_musiclist_playing"
        android:lines="1"
        android:text="@string/app_default"
        android:textSize="@dimen/pt_6"/>

    <TextView
        android:id="@+id/tv_adapter_musiclist_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_toEndOf="@+id/tv_adapter_musiclist_title"
        android:layout_toRightOf="@+id/tv_adapter_musiclist_title"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:text="@string/app_default"/>


</RelativeLayout>